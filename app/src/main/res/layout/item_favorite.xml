<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <!-- Imagen del artista -->
    <ImageView
        android:id="@+id/favArtistImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nombre del artista -->
    <TextView
        android:id="@+id/favArtistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del artista"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/favArtistImage"
        app:layout_constraintTop_toTopOf="@id/favArtistImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/favArtistImage"
        android:layout_marginStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>